<?xml version="1.0" encoding="UTF-8"?>
<!-- 由SpringBoot解析日志配置，可以使用SpringBoot 的高级Profile功能 -->
<configuration scan="true" scanPeriod="10 seconds">
    <contextName>spring-boot</contextName>

    <property name="LOG_HOME" value="/home/gyw/Temporary/logs"/>
    <property name="contextName" value="glearn"/>
    <property name="CONSOLE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%15.15thread] %logger{39} [%method.%line] : %msg%n"/>

    <!--输出到控制台-->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <!--此日志appender是为开发使用，只配置最底级别，控制台输出的日志级别是大于或等于此级别的日志信息-->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>DEBUG</level>
        </filter>
        <encoder>
            <Pattern>${CONSOLE_LOG_PATTERN}</Pattern>
            <!-- 设置字符集 -->
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <logger name="org.hibernate" level="WARN"/>
    <!--打印spring web debug 日志-->
    <logger name="org.springframework.web" level="TRACE"/>
    <!--打印spring 事务debug 日志-->
    <logger name="org.springframework.transaction" level="debug"/>

    <logger name="cn.gyw" level="DEBUG"/>

    <springProfile name="prod">
        <!-- 生产环境日志配置 -->

    </springProfile>
</configuration>
